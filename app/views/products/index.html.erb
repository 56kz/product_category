<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Productos!</h1>
      <div class="new-product">
        <%= link_to "Nuevo Producto", new_product_path, class: "btn btn-primary" %>
      </div>
      <table class="table">
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Categorias</th>
          <th></th>
        </tr>
        <% @products.each do |p| %>
        <tr>
          <td><%= p.name %></td>
          <td><%= p.price %></td>
          <td>
          <% p.categories.each do |c| %>
          <%= c.name %>
          <% end %>
          </td>
          <td></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
