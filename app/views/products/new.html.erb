<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Nuevo Producto: </h1>
      <%= form_for @product do |f| %>

      <div class="form-group">
        <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre de tú producto" %>
      </div>
      <div class="form-group">
        <%= f.text_field :price, class: "form-control input-lg", placeholder: "Ingresa el precio de tú producto" %>
      </div>
      <div class="form-group">

       <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

      </div>
      <div>
        <%= f.submit "Crear Producto!", class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
